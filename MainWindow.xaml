<Window x:Class="YourAppName.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login Portal" Height="300" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="20,20,4,20">
            <TextBlock Text="TeleMed Health" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Label Content="Username:"/>
            <TextBox x:Name="txtUsername" Width="200"/>
            <Label Content="Password:"/>
            <PasswordBox x:Name="txtPassword" Width="200" Margin="0,0,0,10"/>
            <Button Content="Login" Width="100" HorizontalAlignment="Center" Click="LoginButton_Click"/>
            <TextBlock x:Name="txtMessage" Foreground="Red" Margin="0,10,0,0"/>
            <Button Content="Register" Width="100" HorizontalAlignment="Center" Margin="0,10,0,0" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
