<Window x:Class="YourAppName.ClinicianRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clinician Registration" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Email Address:" />
            <TextBox x:Name="txtEmail" Width="200"/>

            <Label Content="Password:" />
            <PasswordBox x:Name="txtPassword" Width="200"/>

            <Label Content="First Name:" />
            <TextBox x:Name="txtFirstName" Width="200"/>

            <Label Content="Last Name:" />
            <TextBox x:Name="txtLastName" Width="200"/>

            <Label Content="Birth Date:" />
            <DatePicker x:Name="dpBirthDate" Width="200"/>

            <Label Content="NPI Number:" />
            <TextBox x:Name="txtNpiNumber" Width="200"/>

            <Label Content="Employer Name:" />
            <TextBox x:Name="txtEmployerName" Width="200"/>

            <Button Content="Register" Width="100" HorizontalAlignment="Center" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
