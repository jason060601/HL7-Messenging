<Window x:Class="YourAppName.RegistrationPortal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration Portal" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Please choose one of the options below:" Margin="0,0,0,20" />

            <Button Content="I am a patient" Width="150" Click="PatientButton_Click"/>
            <Button Content="I am a clinician" Width="150" Click="ClinicianButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
