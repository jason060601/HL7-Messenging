<Window x:Class="YourAppName.PatientRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patient Registration" Height="350" Width="400">
    <Grid>
        <Label Content="Email Address:" />
        <TextBox x:Name="txtEmail" />

        <Label Content="Password:" />
        <PasswordBox x:Name="txtPassword" />

        <Label Content="First Name:" />
        <TextBox x:Name="txtFirstName" />

        <Label Content="Last Name:" />
        <TextBox x:Name="txtLastName" />

        <Label Content="Birth Date:" />
        <DatePicker x:Name="dpBirthDate" />

        <Label Content="Clinician Name:" />
        <TextBox x:Name="txtClinicianName" />

        <Label Content="Insurance Company:" />
        <TextBox x:Name="txtInsuranceComp" />

        <Button Content="Register" Click="RegisterButton_Click" />
    </Grid>
</Window>
